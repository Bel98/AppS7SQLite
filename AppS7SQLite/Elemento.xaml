<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppS7SQLite.Elemento"
             Title="Elemento">
    <ContentPage.Content>
        <StackLayout Spacing="10" Padding="10">
            <Label x:Name="mensaje"/>
            <Entry x:Name="txtNombre" Placeholder="Nombre"/>
            <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
            <Entry x:Name="txtContrasenia" Placeholder="Contraseña" IsPassword="True"/>
            <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked" BackgroundColor="Aqua"/>
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked" BackgroundColor="Red"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>